<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Channel" editable="bottom" decoration-success="status in ['accepted']" decoration-danger="status in ['refused']" >
                <field name="price" />
                <field name="partner_id" />
                <button name="action_accept" type="object" string="Accept" class="oe_highlight" invisible="status in ['accepted', 'refused']"
                    icon="fa-check" />
                <button name="action_refuse" type="object" string="Refuse" invisible="status in ['accepted', 'refused']" />
                <field name="status" column_invisible="1" />
            </tree>
        </field>
    </record>


    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Test">
                <group>
                    <field name="price" />
                    <field name="partner_id" />
                    <field name="status" />
                    <field name="validity" />
                    <field name="date_deadline" />

                </group>
            </form>

        </field>
    </record>


    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="domain">[('property_type_id','=', active_id)]</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids"
            eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('estate_property_offer_view_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('estate_property_offer_view_form')}),]" />

    </record>
</odoo>